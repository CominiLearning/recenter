{
  "version": "1.4.0",
  "manifest_version": 3,
  "name": "Recenter",
  "description": "A browser extension to help focus on what needs to be done and motivate you to get there",
  "action": {
    "default_popup": "js/index.html",
    "default_title": "Recenter"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/images/recenter_logo.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "history",
    "alarms",
    "idle"
  ]
}
